<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/carrierLayout"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/card_background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_carrier"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorMetal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/carrierStateImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_device_hub_black_24dp"
                android:tint="@color/colorRed"/>
            <TextView
                android:id="@+id/carrierStateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/text_disconnected"
                android:textSize="16sp"
                android:textColor="@color/colorRed"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deviceLayout"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/card_background"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_devices"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorMetal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/onlineDeviceCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorGreen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="/"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorMetal"/>
            <TextView
                android:id="@+id/deviceCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorMetal"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/text_online"
            android:textSize="16sp"
            android:textColor="@color/colorGreen"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/attributeLayout"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/card_background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carrierLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_attributes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorMetal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/activeAttributeCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorGreen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="/"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorMetal"/>
            <TextView
                android:id="@+id/attributeCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorMetal"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/text_active"
            android:textSize="16sp"
            android:textColor="@color/colorGreen"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eventLayout"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/card_background"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carrierLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_events"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorMetal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/activeEventCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorGreen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="/"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorMetal"/>
            <TextView
                android:id="@+id/eventCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorMetal"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/text_active"
            android:textSize="16sp"
            android:textColor="@color/colorGreen"/>
    </LinearLayout>

